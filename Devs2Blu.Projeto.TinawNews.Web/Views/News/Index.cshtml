@model IEnumerable<Devs2Blu.Projeto.TinawNews.Domain.DTO.NewsDTO>

<p>
    <a class="btn btn-primary" asp-action="Create">Add new News</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.title)
                    </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.description)
                        </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                        <a class="btn btn-danger" href="#" onclick="deleteNews(@item.id)">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<div class="modal" id="modal" tabindex="-1"></div>